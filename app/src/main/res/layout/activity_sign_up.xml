<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_margin="@dimen/_23sdp"
        app:cardElevation="@dimen/_15sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_18sdp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="@dimen/_20sdp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signUpName"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="@dimen/_35sdp"
                android:hint="Name"
                android:padding="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/person_svgrepo_com"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signUpEmail"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Email"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/email_svgrepo_com"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signUpUsername"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="UserName"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/person_circle_svgrepo_com"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signUpLock"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/lock_alt_svgrepo_com"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signUpPhone"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="@dimen/_15sdp"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="@dimen/_7sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/phone_calling_rounded_svgrepo_com"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/signupbtn"
                android:layout_marginTop="@dimen/_23sdp"
                android:text="Sign Up"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_18sdp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alreadyHaveAccount"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="Already have an account? Login"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"
                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>